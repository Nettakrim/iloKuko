#soweli -> 0 : exit stage right
#soweli -> 1 : enter from stage right

#waso -> 0 : alone
#waso -> 1 : with soweli
#waso -> 2 : exit stage left

#waso -> 3 : exit stage left in sync with soweli
#soweli -> 2 : exit stage left


toki/ [kuko] mi wile e ijo!
wait/ 1
toki/ [waso] wawa a!
wait/ 1
stage/ soweli -> 1
stage/ waso -> 1
wait/ 1.5
toki/ [soweli] mu mu mu
wait/ 1
stage/ soweli -> 0
stage/ waso -> 0
wait/ 1.5
stage/ soweli -> 1
stage/ waso -> 2
wait/ 1.5
stage/ waso -> 1
wait/ 1.5
stage/ waso -> 2
stage/ soweli -> 2
toki/ [waso] mu





def/ win
toki/ [waso] wawa!
end/

def/ lose
toki/ [waso] ike a
end/

wile/ 1   a    jelo,waso
wile/ 0.5 a    walo
wile/ 1   nasa laso

set/ 131 test
set/ 7 #global

def/ #item
test/
2 a    call/ win
1 a    toki/ [waso] sama lili
1 nasa toki/ [waso] nasa a!
0 a    call/ lose
end/
toki/ [waso] seme
next/ wow
end/

#def/ test
toki/ [kuko] ilo Kuko o! mi wile e ijo jelo
wait/ 5

toki/ [waso] seme la ona li wile e tenpo suli?
wait/ 20

toki/ [soweli] suli a!
#end/

